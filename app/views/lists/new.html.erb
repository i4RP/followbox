<div class="panel-body">
    <!-- ここからフォーム -->
    <%= form_for @list do |f| %>
       <h1>FollowBox</h1>
        <!-- listのnameを記入 -->
        <div class="field">
        <p>
          <%= f.label :"http://localhost:3000/" %>
          <%= f.text_field :name %>
        </p>
        </div>
        <!-- list作成ボタン -->
        <div class="actions">
          <%= f.submit "リストを作成する",class:"btn btn-success" %>
        </div>
    <% end %>
</div>
