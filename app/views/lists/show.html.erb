<div class="center">
  <div class="container">
    <div class="col-xs-10 col-xs-offset-1">
      <h1><%= @path %></h1>
    </div>
        <div class="panel panel-default">
            <div class="panel-heading">アカウント一覧</div>
              <% @follows.each do |follow| %>
                <li class="panel-body ul-unstyled">
                  <span class="panel-list-img text-center"></span>
                  <span class="follow-title"><%= follow.name %></span>
                  <span class="follow-nickname">@<%= follow.nickname %></span>
                </li>
              <% end %>
            </div>
        </div>
          <p><%= link_to "TOPへ戻る", lists_path %></p>
  </div>
</div>
