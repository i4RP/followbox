<div class="panel-top panel">
    <!-- ここからフォーム -->
    <%= form_for @list do |f| %>
        <!-- listのnameを記入 -->
        <div class="field">
          <label>フォローボックスのID</label><br>
          <%= f.text_field :name %>
        </div>
        <!-- list作成ボタン -->
        <div class="actions">
          <%= f.submit "ひらく or つくる",class:"btn btn-success" %>
        </div>
    <% end %>
    <p class="note" >※フォローボックスが存在しない場合は自動的に生成されます</p>
</div>
